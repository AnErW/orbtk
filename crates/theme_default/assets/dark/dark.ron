// Default theme of Orbtk.
Theme (
    styles: {
        // -- [START] Base --

        "base": (
            properties: {
                "font_size": "$FONT_SIZE_16",
                "font": "$MEDIUM_FONT",
                "icon_size": "$ICON_SIZE_16",
                "icon_font": "$ICON_FONT"
            },
        ),
        "window": (
             properties: {
                "background": "$BRIGHT_GRAY",
             },
        ),
        "grid": (
            base: "base",
            properties: {
                "background": "transparent",
            },
        ),
        "container": (
            base: "base",
            properties: {
                "padding": 4,
            },
        ),

        // -- [END] Base --

        // -- [START] TextBlock --

        "body": (
            properties: {
                "foreground": "$LINK_WATER",
                "font_size": "$FONT_SIZE_16",
                "font": "$MEDIUM_FONT",
            },
        ),
        "header": (
            base: "body",
            properties: {
                "font_size": "$FONT_SIZE_24",
            }
        ),
        "text_block_header": (
            base: "base",
            properties: {
                "font_size": "$FONT_SIZE_24",
            },
        ),
        "small_text": (
            base: "body",
             properties: {
                "font_size": "$FONT_SIZE_12",
                "foreground": "$PERIWINKLE_GRAY",
            },
        ),

        // -- [END] TextBlock --

        // -- [START] Button --

        "button": ( 
            base: "base",
            properties: {
                "height": 36,
                "foreground": "$LINK_WATER",
                "icon_brush": "$LINK_WATER",
                "background": "$LYNCH",
                "border_radius": 4,
            }, 
            states: [
                (
                    key: "selected",
                    properties: {
                        "background": "$BLUE_BAYOUX",
                    }
                ),
                (
                    key: "hover",
                    properties: {
                        "background": "$FIORD"
                    }
                ),
                (
                    key: "pressed",
                    properties: {
                        "background": "$BLUE_BAYOUX",
                    }
                ),
                (
                    key: "disabled",
                    properties: {
                        "background": "$ROLLING_STONE",
                        "foreground": "$BRIGHT_GRAY",
                        "icon_brush": "$BRIGHT_GRAY"
                    }
                ),
            ],
        ),
        "button_single_content": (
            base: "button",
            properties: {
                "spacing": 0,
            },
        ),
        "button_primary": (
            base: "button",
            properties: {
                "background": "$GOLDEN_DREAM",
                "foreground": "$BRIGHT_GRAY",
                "icon_brush": "$BRIGHT_GRAY",
            },
            states: [
                (
                    key: "hover",
                    properties: {
                         "background": "$GOLDEN_TIPS"
                    }
                ),
                  (
                    key: "pressed",
                    properties: {
                        "background": "$CONFETTI",
                    }
                ),
            ]
        ),
        "button_primary_single_content": (
            base: "button_primary",
            properties: {
                "spacing": 0
            },
        ),
        "button_icon_only": (
            base: "button",
            properties: {
                "icon_size": "$ICON_SIZE_12",
                "icon_brush": "$LINK_WATER",
                "background": "transparent",
                "spacing": 0,
                "min_width": 24,
                "height": 24
            },
        ),
        "button_square": ( 
            base: "button",
            properties: {
                "border_radius": 1,
            }, 
        ),
        "button_small": (
            base: "button",
            properties: {
                "border_radius": 0,
                "icon_brush": "$LINK_WATER",
                "font_size": "$ICON_SIZE_12",
                "background": "transparent",
                "height": 14,
                "spacing": 0,
                "padding": 0,
            },
        ),
        "check_box": (
            base: "base",
            properties: {
                "foreground": "$LINK_WATER",
                "icon_size": "$ICON_SIZE_18",
                "background": "transparent",
                "border_radius": 2,
                "border_width": 1,
                "border_brush": "$BOMBAY",
                "icon_brush": "transparent",
            },
            states: [
                (
                    key: "selected",
                    properties: {
                        "background": "$GOLDEN_DREAM",
                        "border_brush": "$GOLDEN_DREAM",
                        "icon_brush": "$BRIGHT_GRAY",
                    }
                )
            ]
        ),
        "switch": (
            properties: {
                "width": 36,
                "height": 32,
            },
        ),
        "switch_track": (
            properties: {
                "height": 14,
                "border_radius": 7,
                "background": "$SLATE_GRAY",
            }
        ),
        "switch_toggle": (
            properties: {
                "width": 20,
                "height": 20,
                "border_radius": 10,
                "background": "$WHITE",
            },
            states: [
                (
                    key: "selected",
                    properties: {
                        "background": "$GOLDEN_DREAM",
                    }
                )
            ]
        ),
        
        // -- [END] Button --

        "container": (
            base: "base",
            properties: {
                "padding": 4,
            },
        ),

        // -- [START] (Numeric)TextBox --
       
        "text_box": (
            base: "base",
            properties: {
                "height": 32,
                "foreground": "$SILVER_CHALICE",
                "background": "$BRIGHT_GRAY",
                "border_brush": "$LYNCH",
                "border_width": 1,
                "border_radius": 3,
                "padding": 6,
            },
            states: [
                (
                    key: "not_empty",
                    properties: {
                        "foreground": "$PERIWINKLE_GRAY",
                    }
                ),
                (
                    key: "hover",
                    properties: {
                         "background": "$BLACK"
                    }
                ),
                (
                    key: "focused",
                    properties: {
                         "border_brush": "$GOLDEN_DREAM",
                    }
                ),
                (
                    key: "not_empty_focused",
                    properties: {
                        "foreground": "$PERIWINKLE_GRAY",
                        "border_brush": "$GOLDEN_DREAM",
                    }
                )
            ]
        ),
        "numeric_box": (
            base: "text_box",
            properties: {
                "foreground": "$PERIWINKLE_GRAY",
            }
        ),
        "cursor": (
            properties: {
                "background": "$ENERGY_YELLOW",
                "border_brush": "$ENERGY_YELLOW",
                "border_width": 1
            }
        ),

        // -- [END] (Numeric)TextBox --

        // -- [START] Lists --

        "items_widget": (
            properties: {
                "background": "transparent",
                "border_brush": "$LYNCH",
                "border_width": 1,
                "border_radius": 2,
                "padding": 4,
            }
        ),
        "combo_box": (
            base: "base",
            properties: {
                "foreground": "$LINK_WATER",
                "icon_brush": "$LINK_WATER",
                "background": "$BRIGHT_GRAY",
                "border_brush": "$LYNCH",
                "border_width": 1,
                "border_radius": 3,
                "padding": 6,
            },
            states: [
                (
                    key: "selected",
                    properties: {
                        "border_brush": "$ENERGY_YELLOW",
                    }
                )
            ]
        ),
        "combo_box_item": (
            properties: {
                "font_size": "$FONT_SIZE_12",
                "foreground": "$PERIWINKLE_GRAY",
                "background": "transparent",
                "padding_left": 8,
                "padding_right": 8,
            },
            states: [
                (
                    key: "selected",
                    properties: {
                        "foreground": "$BRIGHT_GRAY",
                        "background": "$SUNFLOWER",
                    }
                ),
                (
                    key: "pressed",
                    properties: {
                        "foreground": "$BRIGHT_GRAY",
                        "background": "$SUNFLOWER",
                    }
                )
            ]
        ),

        // -- [END] Lists --

        // -- [START] TabWidget --
        
        "tab_widget": (
            properties: {
                "border_brush": "$BLUE_BAYOUX",
                "border_width": 1,
                "background": "transparent",
            },
        ),
        "tab_header": (
            base: "base",
            properties: {
                "height": 32,
                "font_sze": "$FONT_SIZE_12",
                "foreground": "$WHITE",
                "background": "$FIORD",
                "padding_left": 8,
                "padding_right": 8,
                "border_radius": 0
            },
            states: [
                (
                    key: "selected",
                    properties: {
                        "background": "$GORDUROY"
                    }
                )
            ]
        ),
        "tab_header_bar": (
             properties: {
                "background": "$GOLDEN_TIPS",
                "height": 2
            }
        ),
        "tab_icon_only": (
            properties: {
                "icon_size": "$ICON_SIZE_12",
                "icon_brush": "$LINK_WATER",
                "background": "transparent",
                "spacing": 0,
                "width": 16,
                "height": 16
            }
        ),

        // -- [END] TabWidget --

        // -- [START] Other widgets --

        "slider": (
            properties: {
                "height": 24,
                "border_radius": 2,
                "background": "$MINE_SHAFT",
            }
        ),
        "thumb": (
            properties: {
                "width": 24,
                "height": 24,
                "border_radius": 12,
                "background": "$LYNCH",
            },
            states: [
                (
                    key: "pressed",
                    properties: {
                         "background": "$GOLDEN_DREAM",
                    }
                )
            ],
        ),
        "progress_bar": (
             properties: {
                "background": "$MINE_SHAFT",
                "border_color": "$SILVER",
                "border_radius": 4,
                "border_width": 1,
                "height": 16,
                "padding": 2,
             },
        ),
        "progress_bar_indicator": (
            properties: {
                "background": "$GOLDEN_DREAM",
                "border_radius": 1,
                "height": 12,
                "width": 0,
            }
        ),
        "scroll_bar": (
            properties: {
                "background": "$LYNCH",
                "border_radius": 2,
            },
        ),
        "popup": ( 
            properties: {
                "background": "$RIVER_BAD",
                "border_brush": "$LYNCH",
                "border_width": 1,
                "border_radius": 2,
            },
        ),

        // -- [END] Other widgets --
    },
)
